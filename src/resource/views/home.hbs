<div class = 'mt-4'>
    <div class = 'row'>
        {{#each course}}
            <div class = 'col-sm-6 col-lg-4'>
                <div class="card">
                    <a href="/courses/{{this.slug}}"> 
                        <img class="card-img-top" src= {{this.image}} alt="Card image cap">
                    </a>
                    <div class="card-body">
                        <a href="/courses/{{this.slug}}"> 
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text"> Mô tả: {{this.description}} </p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>

